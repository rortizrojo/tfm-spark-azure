node {
    def nombre_cuenta = 'otracuentadeprueba'
    def nombre_usuario = 'Usuario29Julio'
    def id_suscripcion = '5a08e9e0-83ee-4188-8fc2-18e16c7db524'
    def grupo_recursos = 'grupoRecursosTest29Julio'

    stage('Preparation') { // for display purposes
        git branch: 'master',
                credentialsId: 'gitlab-credentials',
                url: 'https://gitlab.com/rortizrojo/tfm-spark-azure.git'
    }
    stage('Configuring Azure Parameters')
    {
        sh """
            cd scripts/azure/
            python3 modifyStorageParameters.py -sf storage/parameters.json -sn ${nombre_cuenta} 
        """
    }


    stage('Creation Azure Storage'){
        sh """
            cd scripts/azure/storage/
            az login --service-principal -u http://ServiceTestJenkins --password 2366f72d-73e1-47f5-bedd-9b2ca47f9b82 --tenant 50140386-fd10-4b25-8169-e67b2b0b2017
            ./deploy.sh -i ${id_suscripcion} -g ${grupo_recursos} -n desplieguePrueba -l westeurope > resourceId
            idStorageResource=`cat resourceId | jq -r ".properties.outputResources[0].id`
            echo "Id Storage Resource: \$idStorageResource"
            idUsuario=`az identity create -g  ${grupo_recursos} -n ${nombre_usuario} | jq -r ".id"`
            echo "idUsuario: \$idUsuario"
            az role assignment create --role "Owner" --assignee-object-id \$idUsuario --scope \$idStorageResource
       
        """
    }
    stage('Subida de fichero'){
        sh """
            cd scripts/azure/storage/
            ls -la
            az storage account keys list --account-name $nombre_cuenta > ficheroKeys
            cat ficheroKeys
            keyStorage=`python3 parserKeyStorage.py ficheroKeys`
            echo "Nombre Cuenta: $nombre_cuenta"
            echo "KeyStorage: \$keyStorage"
            ./upload.sh $nombre_cuenta \$keyStorage ../../../input/MuestraDatos.csv muestraSubido.csv
        """
    }
}